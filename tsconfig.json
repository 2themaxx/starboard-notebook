{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "es2018",
      "es2017",
      "dom"
    ],
    "declaration": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "node_modules"
  ]
}